<div class="container" style="margin-top: 70px;">
<div class="row">
  <div class="col-xs-8 col-xs-offset-2 text-center margin-bottom-2">
    <h2><strong><%=@other.first_name + " " + @other.last_name %></strong></h2>
  </div>

  <div class="col-md-8 col-md-offset-2">
    <div id="chat">
      <% @messages.each do |message| %>
        <%= render "message", message: message %>
      <% end %>
    </div>


    <div class="panel panel-default">
      <div class="panel-heading">
        Conversation with <%=@other.first_name + " " + @other.last_name %>
      </div>
      <div class="panel-body">

          <%= form_for [@conversation, @conversation.messages.new] do |f| %>
            <div class="form-group">
              <%= f.text_area :content, placeholder: "Add a personal message", class: "form-control" %>
            </div>
            <%= f.hidden_field :user_id, value: current_user.id %>

            <div class="actions">
              <%= f.submit "Send Message", class: "btn btn-primary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>

